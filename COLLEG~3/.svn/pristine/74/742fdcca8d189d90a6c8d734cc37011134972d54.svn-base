.left-side-bar {
  position:fixed;
  top:0;
  left:-180px;
  width:200px;
  height:100%;
  background-color:#89cbdd;
  transition:left .3s;
}
.left-side-bar:hover {
    left:0;
}
.left-side-bar > .status-ico {
    text-align:right;
  }
  .left-side-bar > .status-ico > span:last-child {
    display:none;
  }
  .left-side-bar:hover > .status-ico > span:last-child {
    display:block;
  }
  .left-side-bar:hover > .status-ico > span:first-child {
    display:none;
  }
  .menu {
    text-align:left;
  
  }
  .menu ul {
    background-color:#89cbdd;
  }
  .menu > ul {
    display:inline-block;
    padding:0 10px;
    border-radius:5px;
  }
  .menu ul > li > a {
    display:block;
    padding:10px;
  }
  .menu ul > li:hover > a {
    background-color:black;
    color:white;
  }
  .menu .sub2 {
    display:none;    
  }
  .menu #hover:hover > .sub2{
    display: block;
  }
 
